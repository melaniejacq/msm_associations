<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><%= @movie.image_url %></dd>

      <dt>Director</dt>
      <dd>
        <a href="/directors/<%= @movie.director_id %>">
          <!--new way...-->
          <%= @movie.director.name %>
        </a>
      </dd>
    </dl>

<!--BEGINNING OF ADD NEW CHARACTER-->
        
<div class="row">
  <div class="col-md-12">
    <form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Name
        </label>

        <input type="text" id="title" name="title" placeholder="Name" class="form-control" value="<%= @movie.title %>">
      </div>

      <!-- Label and input for director_id -->
        <input type="hidden" name="movie_id" value="<%= @movie.id %>">
    </div>
          
      <button class="btn btn-success">
        Add a New Character
      </button>
      or
      <a href="/characters">Cancel</a>
    </form>
  </div>
</div>
      
<!--END OF ADD NEW-->
        
    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<ul>
  <% @movie.actors.each do |actor| %>
    <li><a href="/actors/<%= actor.id %>"><%= actor.try(:name) %></a></li>
    <% end %>      
</ul>